<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="containerVbox" maxHeight="1.7976931348623157E308" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dynamicfxview.view.DynamicFXContainerView">
    <children>
        <GridPane fx:id="configGrid" hgap="5.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <RadioButton mnemonicParsing="false" selected="true" text="flow">
                    <toggleGroup>
                        <ToggleGroup fx:id="layoutSelection" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton mnemonicParsing="false" text="list" toggleGroup="$layoutSelection" GridPane.columnIndex="1" />
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </GridPane>
        <ScrollPane fx:id="scrollPane" fitToHeight="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
            <content>
                <FlowPane fx:id="flowLayout" hgap="5.0" nodeOrientation="LEFT_TO_RIGHT" prefWrapLength="0.0" styleClass="layout-flow" vgap="7.0" />
            </content>
        </ScrollPane>
    </children>
</VBox>
